{
  "editor.formatOnSave": true,
  "rust-analyzer.linkedProjects": [
    "./frontend/src-tauri/Cargo.toml"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  },
  "isort.check": true,
  "isort.severity": {
    "W": "Warning",
    "E": "Warning"
  },
  "isort.args": [
    "--profile",
    "black"
  ]
}